extends ../../layouts/default.pug
include ../../mixins/alert.pug

block main
    +alert-success(3000)
    +alert-error(5000)

    .container.mt-5
        h1 Quản lý Roles
        a.btn.btn-primary.mb-3(href=`${prefixAdmin}/roles/create`) Thêm Role mới

        table.table.table-bordered.table-hover
            thead
                tr
                    th STT
                    th Nhóm quyền
                    th Mô tả
                    th Hành động
            tbody
                if records.length > 0
                    each role, index in records
                        tr
                            td #{index + 1}
                            td #{role.title}
                            td #{role.description}
                            td
                                a.btn.btn-sm.btn-secondary.me-1(href=`${prefixAdmin}/roles/detail/${role.id}`) Chi tiết
                                a.btn.btn-sm.btn-warning.me-1(href=`${prefixAdmin}/roles/edit/${role.id}`) Sửa
                                a.btn.btn-sm.btn-danger(href=`${prefixAdmin}/roles/delete/${role.id}`) Xóa